@model IEnumerable<InventoryManagementSystem.Models.Purchase>
<h2>
    Purchased Product List
</h2>
<p>
    @Html.ActionLink("Create New", "PurchaseProduct", "Purchase", new { @class = "btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Purchased Product")
        </th>
        <th>
            @Html.DisplayName("Purchase Quantity")
        </th>
        <th>
            @Html.DisplayName("Purchase Date")
        </th>
        <th>
            @Html.DisplayName("Actions")
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.purchase_product)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.purchase_quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.purchase_date)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "Purchase", new { id=item.id }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Details", "Detail", "Purchase", new { id = item.id }, new { @class = "btn btn-success"}) |
            @Html.ActionLink("Delete", "Delete", "Purchase", new { id=item.id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
